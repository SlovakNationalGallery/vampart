<% if flash[:notice].present? %>
  <div class="error" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="jumbotron">
  <div class="cover"></div>

  <div class="container">
    <div class="logo">
      <a href="/">
        <%= image_tag 'logo.svg' %>
      </a>
    </div>

    <div class="headline">
      <h1 class="display-3">
        How vampire are you?
      </h1>

      <h2>
        Find yourself in historial artworks from national galleries of Slovak Republic and Norway.
      </h2>

      <button id="pick-a-photo" class="btn btn-primary btn-lg btn-upload">
        Upload Your Photo
      </button>

      <%= form_for @image, html: { multipart: true } do |f| %>
        <%= f.file_field :photo, hidden: true %>
      <% end %>

      <%= image_tag 'blood-drop.svg', class: 'blood-drop' %>
    </div>
  </div>
</div>


<%= render 'timeline', image: LandingPageImage, similar_faces: LandingPageImage.similar_faces %>
